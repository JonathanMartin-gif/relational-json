{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "plugins": ["import"],
  "rules": {
    "no-extra-parens": 1,
    "valid-jsdoc": [1, {
      "requireParamDescription": false,
      "requireReturnDescription": false
    }],
    "default-case": 2,
    "curly": 1,
    "eqeqeq": ["error", "always", {"null": "ignore"}],
    "no-caller": 2,
    "no-eval": 2,
    "no-extend-native": 1,
    "no-floating-decimal": 1,
    "no-invalid-this": 1,
    "no-new-func": 1,
    "no-new-wrappers": 1,
    "no-sequences": 1,
    "no-throw-literal": 1,
    "no-with": 2,
    "vars-on-top": 1,
    "no-useless-call": 1,
    "no-useless-concat": 1,
    "wrap-iife": 2,
    "yoda": 2,
    "comma-dangle": [1, "never"],
    "indent": [1, "space"],
    "new-cap": 2,
    "new-parens": 2,
    "one-var": [1, "never"],
    "quotes": [1, "double"],
    "arrow-parens": 1,
    "arrow-spacing": 1,
    "arrow-body-style": 1,
    "prefer-const": 1
  },
  "globals": {
    "expect": true,
    "sinon": true,
    "sandbox": true,
    "console": true
  }
}